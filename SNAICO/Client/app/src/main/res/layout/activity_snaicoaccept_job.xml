<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:background="#232323">


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:background="#232323"
        tools:context="eis1415.rebecca.simon.snaico.SNAICOAcceptJob">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/uebersichtNeuerAuftrag"
            android:id="@+id/uebersichtNeuerAuftrag"
            android:textSize="20sp"
            android:width="300dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Position:"
            android:id="@+id/uebersichtAuftragPosition"
            android:layout_below="@+id/uebersichtNeuerAuftrag"
            android:layout_marginTop="30dp"
            android:textSize="16sp"
            android:width="300dp"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/uebersichtAuftragAdresseTextView"
            android:width="300dp"
            android:height="50dp"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:layout_below="@+id/uebersichtAuftragPosition"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="TÃ¤tigkeit:"
            android:id="@+id/uebersichtAuftragTaetitkeitTextView"
            android:layout_below="@+id/uebersichtAuftragAdresseTextView"
            android:layout_marginTop="33dp"
            android:textSize="16sp"
            android:width="300dp"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/uebersichtAuftragTaetitkeitEditText"
            android:width="300dp"
            android:height="50dp"
            android:layout_centerHorizontal="true"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:textSize="20sp"
            android:layout_below="@+id/uebersichtAuftragTaetitkeitTextView"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Mitarbeiter:"
            android:id="@+id/uebersichtAuftragMitarbeiterTextView"
            android:layout_below="@+id/uebersichtAuftragTaetitkeitEditText"
            android:textSize="16sp"
            android:width="300dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="31dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/uebersichtAuftragMitarbeiter"
            android:layout_below="@+id/uebersichtAuftragMitarbeiterTextView"
            android:width="300dp"
            android:height="50dp"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            android:paddingStart="15dp"
            android:paddingEnd="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Kommentar:"
            android:id="@+id/uebersichtAuftragKommentarTextViewHead"
            android:layout_below="@+id/uebersichtAuftragMitarbeiter"
            android:textSize="16sp"
            android:width="300dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/uebersichtAuftragKommentarTextView"
            android:layout_below="@+id/uebersichtAuftragKommentarTextViewHead"
            android:width="300dp"
            android:height="50dp"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            android:paddingStart="15dp"
            android:paddingEnd="15dp" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:background="#dedede"
            android:textColor="#ff000000"
            android:width="300dp"
            android:height="50dp"
            android:textSize="20dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/uebersichtAuftragBestaetigen"
            android:layout_below="@+id/uebersichtAuftragKommentarTextView"
            android:text="@string/uebersichtAuftragBestaetigen"
            android:layout_marginTop="15dp"/>

    </RelativeLayout>

</ScrollView>
